<h2>EVENTO:  <%= @event.name %> </h2>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.day %>
</p>

<p>
  <strong>Address:</strong>
  <%= @event.full_address %>
</p>

