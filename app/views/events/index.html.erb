

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Address</th>
      <th>Spot</th>
      <th>Ong</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.day %></td>
        <td><%= event.address %></td>
        <td><%= event.spot %></td>
        <td><%= link_to "#{event.ong}", ong_path(event.ong) %></td>
        <td><%= link_to 'Show', event %></td>
        <% if can? :update, event.ong => Event %>
          <td><%= link_to 'Edit', edit_ong_event_path(event.ong, event) %></td>
        <% end %>
        <% if can? :destroy, event.ong => Event %>
          <td><%= link_to 'Destroy', ong_event_path(event.ong, event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

