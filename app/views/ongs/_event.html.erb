<h3>Miss *Eventos*:</h3>

<table class="table ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Address</th>
      <th>Spot</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to "#{event.name}", event_path(event) %></td>
        <td><%= event.description %></td>
        <td><%= event.day %></td>
        <td><%= event.address %></td>
        <td><%= event.spot %></td>
        <td><%= raw event.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></td>
        <td><%= link_to 'Show', event %></td>
        <% if can? :update, event.ong => Event %>
          <td><%= link_to 'Edit', edit_ong_event_path(event.ong, event) %></td>
        <% end %>
        <% if can? :destroy, event.ong => Event %>
          <td><%= link_to 'Destroy', ong_event_path(event.ong, event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>