

<p>
  <strong>Name:</strong>
  <%= @ong.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @ong.description %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @ong.image, width: '200px'%>
</p>

<p>
  <strong>Mail:</strong>
  <%= @ong.mail %>
</p>

<p>
  <strong>User:</strong>
  <%= @ong.user %>
</p>

<br>

<% if can? :create, Comment %>
  <%= form_tag comment_ong_path do %>
    <p> <h2>  <%= label_tag :content, "Deja tu comentario:"  %></h2></p>
    <%= text_area_tag :content  %>
    <p><%= submit_tag "Enviar"   %></p>
  <% end %>
<% end %>

<h2>Comentarios:</h2>

<% @comments.each do |c| %>
  <hr>
  <p><small><%= time_ago_in_words c.created_at  %></small></p>
  <p><%= c.content  %></p>
  <p><small>Creado por: <%= c.user %></small></p>
  <% if can? :delete_comment, Ong %>
    <p><small><%= link_to 'Borrar Comentario', delete_comment_ong_path(@ong, c), method: :delete %></small></p>
    <hr>
   <% end %>
<% end %>
</p>

<br>
<% if can? :create, Event %>
  <%= link_to 'CREA UN EVENTO', new_ong_event_path(@ong) %>
  <br>
  <br>
  <%= link_to 'MISS *EVENTS*', ong_events_path(@ong) %>
  <br>
<% end %>
<% if can? :update, Ong %>
  <%= link_to 'Edit', edit_ong_path(@ong) %>
<% end %>
<%= link_to 'Back', ongs_path %>

