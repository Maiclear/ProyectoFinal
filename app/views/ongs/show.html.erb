<h2>ONG: " <%= @ong.name %> " </h2>
<p>
  <%= image_tag @ong.image, width: '150px'%>
</p>

<p>
  <strong>Nombre:</strong>
  <%= @ong.name %>
</p>

<p>
  <strong>Descripci√≥n:</strong>
  <%= @ong.description %>
</p>

<p>
  <strong>Mail:</strong>
  <%= @ong.mail %>
</p>

<p>
  <strong>User:</strong>
  <%= @ong.user %>
</p>
<br>
<%= render 'event' %>
<br>

<% if can? :favorite, @ong %>
  <p>Seguidores: <strong> <%= @ong.favorites.count %></strong></p>
  <p>Seguir:
    <% unless @ong.favorited_by? current_user  %>
      <%= link_to 'Seguir', favorite_ong_path(@ong) %>
    <% else %>
      <%= link_to 'Dejar de Seguir', favorite_ong_path(@ong)  %>
    <% end %>
  </p>
<% end %>
<br>
<% if @ong.user == current_user %>
  <%= link_to 'CREA UN EVENTO', new_ong_event_path(@ong) %>
<% end %>

<% if can? :create, Comment %>
  <%= render partial: "comments/form" , locals: {commentable: @ong} %>
<% end %>
<%= render partial: "comments/comments" , locals: {commentable: @ong} %>

<br>

<% if can? :update, @ong %>
  <%= link_to 'Edit', edit_ong_path(@ong) %>
<% end %>
<%= link_to 'Back', ongs_path %>
