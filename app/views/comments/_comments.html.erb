
<h2>Comentarios:</h2>
<% commentable.comments.each do |comment| %>
	<hr>
	<p><small><%= time_ago_in_words comment.created_at  %></small></p>
	<p><%= comment.content  %></p>
	<p><small>Creado por: <%= comment.user %></small></p>
	<% if can? :destroy, comment %>
		<% if commentable.is_a? Ong %>
			<p><small><%= link_to 'Borrar Comentario', ong_comment_path(commentable, comment), method: :delete %></small></p>
		<% elsif commentable.is_a? Event %>
			<p><small><%= link_to 'Borrar Comentario', event_comment_path(commentable, comment), method: :delete %></small></p>
		<% end %>
	<hr>
	<% end %>
<% end %>